<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        tools:context=".InicioActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

    >
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"

    >
        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"

        >
            <ImageView
                    android:layout_width="83dp"
                    android:layout_height="73dp"
                    android:src="@drawable/sds_logo"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-11dp"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-20dp"
            >

                <TextView
                        android:id="@+id/tv_usuario_nombre"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Buscar"
                        android:padding="5dp"
                        android:layout_gravity="start"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"

                />
                <TextView
                        android:id="@+id/tv_limpiar"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:text="Limpiar"
                        android:padding="6dp"
                        android:layout_marginLeft="135dp"
                        android:layout_gravity="end"
                        android:textSize="13dp"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"

            >
            <EditText
                    android:id="@+id/et_software"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/sofware"
                    android:hint="Software"
                    android:textSize="15dp"
                    android:textColorHint="@color/colorHint"
                    android:textColor="#090909"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/login_edit_background"
                    android:padding="10dp"
            />

            <EditText
                    android:id="@+id/et_ubicacion"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ubicacion"
                    android:hint="Ciudad"
                    android:textSize="15dp"
                    android:textColorHint="@color/colorHint"
                    android:textColor="#090909"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/login_edit_background"
                    android:padding="10dp"
            />


            <Button
                    android:id="@+id/btn_buscar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/buscar_color"
                    android:text="Buscar"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:textAllCaps="false"
                    android:textSize="21dp"

            />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <ListView
                android:id="@+id/usuarios_lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >

        </ListView>
    </LinearLayout>


</RelativeLayout>